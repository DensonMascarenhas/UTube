
<% if @video.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading"><%= pluralize(@video.errors.count, "error") %> prohibited this todo from being saved:!</h4>
    <ul>
        <% @video.errors.each do |error| %>
          <li class="mb-0"><%= error.full_message %></li>
        <% end %>
      </ul>
    <hr>
  <p class="mb-0">Please check and give proper inputs.</p>
</div>
    
  <% end %>

<%= form_with(model: @video) do |f| %>


<div class="mb-3 row">
    <%= f.label :title, "Title",{class:"form-label"} %>
    <%= f.text_field :title, {class:"form-control", placeholder:"Enter Title...", required: "true"} %>
</div>

<div class="mb-3 row">
    <%= f.label :description, "Description",{class:"form-label"} %>
    <%= f.text_area :description, {class:"form-control", placeholder:"Enter Description..", required: "true"} %>
</div>

<div class="mb-3 row">
    <%= f.label :link, "Link",{class:"form-label"} %>
    <%= f.text_field :link, {class:"form-control", placeholder:"Enter embeded link...", required: "true"} %>
</div>

<div class="mb-3 row">
<center>
    <%=f.submit(class:"btn btn-primary mb-3")%>
    </center>
</div>
<% end %>