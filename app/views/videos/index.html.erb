<div class="container" style="margin-top:20px;" >
<nav class="navbar bg-light">
<div class="container-fluid">
  <a class="navbar-brand" href="<%= root_path %>">
   <img src="<%= asset_url('youtube.png') %>" alt="Logo" width="45" height=40"" class="d-inline-block align-text-top">
    UTube
  </a>
  <% if user_signed_in? %>
  <%= link_to "Your Profile", profile_path(current_user.id), {class: "btn btn-outline-success"} %>
  <% else %>
  <%= link_to "Add Your Profile", new_user_registration_path, {class: "btn btn-outline-success"} %>
<%end%>
</div>
</nav>
  <div class="jumbotron" >


  <% @tags.each do |t| %>
  <%= link_to t.name,videos_path(t.name),{class:"btn btn-outline-dark"} %>

  <% end %>

  <% @videos.each do |v| %>
  <div class="card text-center" style="margin-top:20px;">
  <div class="card-body">
  <iframe width="560" height="315" src="<%=v.link %>" frameborder="0" allowfullscreen="false"></iframe>    
  <p class="card-text"><%=v.title%></p>
  <p class="card-text"><%=v.description%></p>

  <%= link_to "View Now",video_path(v.id), {class: "btn btn-success"}%>
  </div>
  <div class="card-footer text-muted">
    Uploaded On: <%= v.created_at %>
  </div>
</div>
<% end %>

</div>
</div>